<h1>BOOKS</h1>

<%= link_to "new book", new_book_path %>

<% @books.each do |i|  %>

  <ul>

    <li>
      TITLE: <%= i.title %>
    </li>

    <li>
      AUTHOR: <%= i.author %>
    </li>

    <li>
      DESCRIPTION: <%= i.description %>
    </li>

    <% if i.cover_picture.attached? %>
      <li>
        <%= image_tag i.cover_picture  %>
      </li>
    <% end %>

    <li>
      <%= link_to "edit", edit_book_path(i) %>
    </li>

  </ul>

<% end %>
